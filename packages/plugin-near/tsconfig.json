{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "declaration": true,
        "paths": {
            "@defuse-protocol/defuse-sdk": [
                "./node_modules/@defuse-protocol/defuse-sdk"
            ]
        }
    },
    "include": [
        "src"
    ]
}